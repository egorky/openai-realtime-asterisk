{
  "asterisk": {
    "ariUrl": "http://localhost:8088",
    "ariUsername": "asterisk",
    "ariPassword": "asterisk",
    "ariAppName": "speech-to-text-app",
    "rtpHostIp": "127.0.0.1"
  },
  "googleSpeech": {
    "credentialsPath": "./config/google-credentials.json",
    "defaultLanguageCode": "es-US",
    "encoding": "MULAW",
    "sampleRateHertz": 8000,
    "maxAlternatives": 1,
    "profanityFilter": false,
    "enableWordTimeOffsets": false,
    "enableWordConfidence": false,
    "enableAutomaticPunctuation": true,
    "enableSpokenPunctuation": { "value": false },
    "enableSpokenEmojis": { "value": false },
    "model": "telephony_short",
    "useEnhanced": false,
    "diarizationConfig": {
      "enableSpeakerDiarization": true,
      "minSpeakerCount": 1,
      "maxSpeakerCount": 6
    },
    "interimResults": true,
    "singleUtterance": false,
    "enableVoiceActivityEvents": true,
    "enableVoiceActivityTimeout": true,
    "voiceActivityTimeout": {
      "speechStartTimeoutSeconds": 10.0,
      "speechEndTimeoutSeconds": 1.5
    }
  },
  "logging": {
    "level": "info",
    "enabled": true,
    "fileLoggingEnabled": false,
    "filePath": "./app.log",
    "fileLevel": "info"
  },
  "audio": {
    "greetingPath": "sounds/greeting",
    "waitingPath": "sounds/waiting",
    "captureAudioEnabled": false,
    "captureAudioPath": "./recordings",
    "forceWaitingAudio": false,
    "waitingAudioMode": "playAndTransfer"
  },
  "appRecognitionConfig": {
    "recognitionActivationMode": "fixedDelay",
    "bargeInDelaySeconds": 0.2,
    "noSpeechBeginTimeoutSeconds": 5.0,
    "initialGoogleStreamIdleTimeoutSeconds": 10.0,
    "speechEndSilenceTimeoutSeconds": 1.5,
    "maxRecognitionDurationSeconds": 30.0,
    "enableFallbackBatchTranscription": false,
    "vadSilenceThresholdMs": 2500,
    "vadTalkThreshold": 256,
    "vadRecogActivation": "vadMode",
    "vadMaxWaitAfterPromptSeconds": 10.0,
    "vadActivationDelaySeconds": 0.0,
    "vadInitialSilenceDelaySeconds": 0.0
  },
  "dtmfConfig": {
    "dtmfInterDigitTimeoutSeconds": 3.0,
    "dtmfFinalTimeoutSeconds": 5.0,
    "enableDtmfRecognition": true
  }
}
