{
  "appConfig": {
    "appRecognitionConfig": {
      "recognitionActivationMode": "VAD",
      "noSpeechBeginTimeoutSeconds": 3,
      "speechCompleteTimeoutSeconds": 5,
      "vadConfig": {
        "vadSilenceThresholdMs": 250,
        "vadRecognitionActivationMs": 40
      },
      "initialOpenAIStreamIdleTimeoutSeconds": 10,
      "bargeInDelaySeconds": 0.5
    },
    "dtmfConfig": {
      "dtmfEnabled": true,
      "dtmfInterdigitTimeoutSeconds": 2,
      "dtmfMaxDigits": 16,
      "dtmfTerminatorDigit": "#"
    },
    "bargeInConfig": {
      "bargeInModeEnabled": true
    }
  },
  "openAIRealtimeAPI": {
    "model": "gpt-4o-mini-realtime-preview-2024-12-17",
    "language": "en",
    "inputAudioFormat": "pcm_s16le",
    "inputAudioSampleRate": 16000,
    "ttsVoice": "alloy",
    "outputAudioFormat": "mp3",
    "outputAudioSampleRate": 24000,
    "responseModalities": ["audio", "text"],
    "encoding": "LINEAR16",
    "sampleRate": 8000,
    "audioFormat": "PCMU"
  },
  "logging": {
    "level": "info"
  }
}
